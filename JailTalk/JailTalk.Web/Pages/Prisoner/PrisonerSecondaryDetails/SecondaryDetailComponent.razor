@using JailTalk.Web.Pages.Prisoner.PrisonerContactDetails
<JailTalk.Web.Components.Common.HorizontalSpacer Spacing="6" />
<MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Account Details">
        <TelephoneBalanceAndHistoryComponent PrisonerId="@PrisonerId" />
        <JailTalk.Web.Pages.Prisoner.PrisonerDetails.PrisonerOtherDetailsComponent PrisonerId="@PrisonerId" />
    </MudTabPanel>
    <MudTabPanel Text="Contact Information">
        <ContactDetailsComponent PrisonerId="@PrisonerId" />
    </MudTabPanel>
    <MudTabPanel Text="Photos">
        <PrisonerPhotosComponent PrisonerId="@PrisonerId" />
    </MudTabPanel>
    <MudTabPanel Text="Call History">
        <CallHistoryComponent PrisonerId="@PrisonerId" />
    </MudTabPanel>
</MudTabs>
@code {
    [Parameter]
    public string PrisonerId { get; set; }

    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        return base.OnAfterRenderAsync(firstRender);
    }
}
