{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Aws": {
    "Rekognition": {
      "AccessKey": "accesskey",
      "SecretKey": "secretkey",
      "Region": "region"
    },
    "S3": {
      "AccessKey": "accesskey",
      "SecretKey": "secretkey",
      "Region": "region",
      "UseBasicCredentialAuthentication": true,
      "BucketName": "jail-connect"
    }
  },
  "Email": {
    "EnableEmailService": false,
    "SmtpSettings": {
      "Server": "smtpServer",
      "Port": "0",
      "UserName": "smtpUsername",
      "Password": "smtpPassword",
      "Name": "smtpAccountName"
    }
  }
}
